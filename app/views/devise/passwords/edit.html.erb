<div class="small-4 large-centered columns">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'log-in-form' }) do |f| %>
    <h4 class="text-center">Mudar sua senha</h4>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password, required: true, autofocus: true, input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: "Confirmar sua senha", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mudar minha senha", class: 'button expanded' %>
    </div>
  <% end %>

  <p class="text-center"><%= link_to "Entrar", new_session_path(resource_name) %></p>
</div>
