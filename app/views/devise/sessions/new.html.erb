<div class="small-4 large-centered columns">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'log-in-form' }) do |f| %>
    <h4 class="text-center">Login</h4>

    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Entrar", class: "button expanded" %>
    </div>

    <p class="text-center"><%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %></p>
  <% end %>
</div>

<br>

<p class="text-center"><%= link_to "Cadastrar-se", new_registration_path(resource_name), class: 'button' %></p>
